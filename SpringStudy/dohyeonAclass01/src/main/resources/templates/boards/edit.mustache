{{>layouts/header}}
<h1> 글 수정 </h1>
{{#article}}
    <form class="container" action="/articles/update" method="post">
        <input name="id" type="hidden" value="{{id}}">
        <div class="mb-3">
            <label class="form-label" for="title1">제목</label>
            <input type="text" value="{{title}}" class="form-control" id="title" name="title">
        </div>
        <div class="mb-3">
            <label class="form-label">내용</label>
            <textarea class="form-control" id="content" rows="3" name="content">{{content}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{{/article}}

<h3>
    <a href="/articles/{{article.id}}/edit">수정</a>
    <a href="/articles/{{article.id}}/delete">삭제</a>
</h3>

{{>layouts/footer}}